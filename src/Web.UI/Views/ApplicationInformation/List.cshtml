@model IEnumerable<VerticalFlight.Core.Domain.ApplicationInformation>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>UserID</th>
        <th>ApplicantName</th>
        <th>DOB</th>
        <th>Citizenship</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>HomePhone</th>
        <th>MobilePhone</th>
        <th>CreatedDate</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ApplicationInformationID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ApplicationInformationID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ApplicationInformationID })
            </td>
            <td>@item.UserID</td>
            <td>@item.ApplicantName</td>
            <td>@String.Format("{0:g}", item.DOB)</td>
            <td>@item.Citizenship</td>
            <td>@item.Address</td>
            <td>@item.City</td>
            <td>@item.State</td>
            <td>@item.Zip</td>
            <td>@item.HomePhone</td>
            <td>@item.MobilePhone</td>
            <td>@String.Format("{0:g}", item.CreatedDate)</td>
        </tr>
    }
</table>

